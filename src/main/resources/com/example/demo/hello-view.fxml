<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.shape.Rectangle?>
<?import javafx.scene.control.CheckBox?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      spacing="10" alignment="CENTER" fx:controller="com.example.demo.RPGController">
    <Rectangle fx:id="rectangle" width="100" height="100" fill="blue" />
    <CheckBox fx:id="checkBox" text="Toggle me" onAction="#onCheckboxToggle" />
    <Button text="Change Color" onAction="#onColorChange" />
    <Button text="Undo" onAction="#onUndo" />
    <Button text="Redo" onAction="#onRedo" />
    <Button text="View History" onAction="#showHistory" />
</VBox>
